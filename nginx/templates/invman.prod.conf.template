server {
    listen 80 default_server;
    listen [::]:80;

    server_name invman.nl;

    location ^~ /.well-known/acme-challenge/ {
      default_type "text/plain";
      rewrite /.well-known/acme-challenge/(.*) /$1 break;
      root /var/www/letsencrypt;
    }

    location /nginx_status {
        allow 127.0.0.1;
        deny all;

        stub_status;
    }
}